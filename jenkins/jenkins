pipeline {
    agent any

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "M3"
    }

    stages {
        stage('preparation') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/DEPI-DevOps-Team/spring-petclinic.git'

            }
        }

         stage('build') {
            steps {
                // Get some code from a GitHub repository
                sh './mvnw package'

            }
        }

        stage('ci') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) 
               { sh """
                docker build . -f dockerfile -t andrewbassily0/petclinic
                docker login -u ${USERNAME} -p ${PASSWORD}
                docker push andrewbassily0/petclinic
                """ }
            }
        }
         stage('cd') {
            steps {
                // Run Maven on a Unix agent.
                sh "docker run -d -p 3000:3000 andrewbassily0/petclinic"
            }
        }
        
    }
}
